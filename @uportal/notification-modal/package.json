{
    "name": "@uportal/notification-modal",
    "version": "1.0.2",
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/uPortal-contrib/notification-web-components.git"
    },
    "bugs": {
        "url": "https://github.com/uPortal-contrib/notification-web-components/issues"
    },
    "homepage": "https://github.com/uPortal-contrib/notification-web-components#readme",
    "main": "dist/notification-modal.js",
    "source": "src/components/NotificationModal.vue",
    "scripts": {
        "start": "vue-cli-service serve",
        "build": "vue-cli-service build --target wc --name notification-modal 'src/components/NotificationModal.vue'",
        "prebuild": "babel ../../node_modules/@vue/web-component-wrapper/dist/vue-wc-wrapper.js -o ../../node_modules/@vue/web-component-wrapper/dist/vue-wc-wrapper.js",
        "lint": "vue-cli-service lint"
    },
    "dependencies": {
        "@uportal/open-id-connect": "^1.37.0",
        "axios": "^0.27.0",
        "bootstrap-vue": "^2.0.0",
        "vue": "^2.7.10"
    },
    "devDependencies": {
        "@babel/cli": "^7.0.0",
        "@babel/core": "^7.0.0",
        "@babel/plugin-transform-runtime": "^7.0.0",
        "@babel/preset-env": "^7.0.0",
        "@vue/cli-plugin-babel": "^5.0.0",
        "@vue/cli-plugin-eslint": "^5.0.0",
        "@vue/cli-service": "^5.0.0",
        "@vue/eslint-config-prettier": "^7.0.0",
        "eslint": "^8.0.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-vue": "^9.0.0",
        "lint-staged": "9.5.0",
        "node-sass": "^7.0.0",
        "sass-loader": "^13.0.0",
        "vue-template-compiler": "^2.7.10"
    },
    "eslintConfig": {
        "root": true,
        "env": {
            "node": true
        },
        "extends": [
            "plugin:vue/essential",
            "@vue/prettier"
        ],
        "rules": {},
        "parserOptions": {
            "parser": "@babel/eslint-parser",
            "requireConfigFile": false
        }
    },
    "postcss": {
        "plugins": {
            "autoprefixer": {}
        }
    },
    "browserslist": [
        "last 2 versions",
        "not ie < 11"
    ],
    "gitHooks": {
        "pre-commit": "lint-staged"
    },
    "lint-staged": {
        "*.js": [
            "vue-cli-service lint",
            "git add"
        ],
        "*.vue": [
            "vue-cli-service lint",
            "git add"
        ]
    }
}
